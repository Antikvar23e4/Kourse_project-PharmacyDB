<Window x:Class="Apteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Apteka"
        mc:Ignorable="d" Background="#AEB9A4"
        Title="MainWindow" Height="550" Width="511">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="Foreground" Value="#523C2E"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#314D37"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#FCFCFB"/>
            <Setter Property="Background" Value="#314D37"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Label Content="User login" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" FontSize="36"/>
        <TextBox x:Name="UserNameTextBox" HorizontalAlignment="Left" Margin="138,178,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="250" Height="40"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="138,267,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="40"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="133,144,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="133,233,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button Content="Lets start" HorizontalAlignment="Left" Margin="138,333,0,0" VerticalAlignment="Top" Height="31" Width="250" Click="Button_Click_1"/>
        <Label Content="I haven't got an account(" HorizontalAlignment="Left" Margin="79,434,0,0" VerticalAlignment="Top" />
        <Button Content="Sign Up" HorizontalAlignment="Left" Margin="225,431,0,0" VerticalAlignment="Top" Height="30" Width="60" Click="Button_Click"/>
        <Button Content="Continue without registration" HorizontalAlignment="Left" Margin="138,387,0,0" VerticalAlignment="Top" Width="250" Click="Button_Click_2" Background="#AEB9A4" Foreground="#314D37"/>
    </Grid>
</Window>