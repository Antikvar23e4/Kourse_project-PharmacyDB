<Page x:Class="Apteka.Regisration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Apteka"
      mc:Ignorable="d" Background="#AEB9A4"
      Title="Regisration"  Height="600" Width="511">
    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="Foreground" Value="#523C2E"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="Foreground" Value="#523C2E"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#314D37"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#FCFCFB"/>
            <Setter Property="Background" Value="#314D37"/>
        </Style>
    </Page.Resources>
    <Grid Margin="0,0,0,0">
        <Label Content="Registration" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="73,80,0,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top"/>
        <TextBox x:Name="LastNameTextBox" HorizontalAlignment="Left" Margin="73,165,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="260" Height="28"/>
        <TextBlock HorizontalAlignment="Left" Margin="73,286,0,0" TextWrapping="Wrap" Text="Phone Number" VerticalAlignment="Top"/>
        <TextBox x:Name="PhoneNumberTextBox" HorizontalAlignment="Left" Margin="73,303,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" Height="28"/>
        <TextBox x:Name="MiddleNameTextBox" HorizontalAlignment="Left" Margin="73,233,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="260" Height="28"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="73,368,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="260" Height="28"/>
        <TextBox x:Name="FirstNameTextBox" HorizontalAlignment="Left" Margin="73,96,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="260" Height="28"/>
        <TextBox x:Name="RoleIdTextBox" Text="1" HorizontalAlignment="Left" Margin="76,495,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="78" Height="28"/>


        <TextBlock HorizontalAlignment="Left" Margin="73,217,0,0" TextWrapping="Wrap" Text="Middle Name" VerticalAlignment="Top" RenderTransformOrigin="0.495,-0.167"/>
        <TextBlock HorizontalAlignment="Left" Margin="73,144,0,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="73,352,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="76,479,0,0" TextWrapping="Wrap" Text="RoleId" VerticalAlignment="Top" Width="78"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="73,427,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="260" Height="28"/>
        <TextBlock HorizontalAlignment="Left" Margin="73,411,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="375,427,0,0" VerticalAlignment="Top" Height="34" Width="106" Click="Button_Click_1"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Height="27" Width="51" Background="#AEB9A4" Click="Button_Click"/>

    </Grid>
</Page>
